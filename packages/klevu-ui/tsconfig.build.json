{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["./src/storybookUtils.ts", "./src/**/*.stories.ts"]
}

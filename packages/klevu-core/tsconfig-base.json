{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ES2019", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist"]
  }
}
